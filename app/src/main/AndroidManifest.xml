<?xml version="1.0" encoding="utf-8"?>
<manifest package="mcgill.ca.fragilitysurvey"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".quiz.QuizActivity"
            android:label="@string/title_activity_step1"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".patientlist.PatientListActivity"
            android:label="@string/title_activity_step2"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".credentials.CredentialsActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".patientlist.PatientScoreActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".filter.SurveyFilterActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".quiz.postsubmit.GoodByeAtivity">
        </activity>
        <activity android:name=".quiz.postsubmit.RecommendationActivity">
        </activity>
    </application>

</manifest>